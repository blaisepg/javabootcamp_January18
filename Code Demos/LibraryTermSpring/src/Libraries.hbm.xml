<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="com.gc.libterm.dto.LibrariesDto" table="libraries" schema="LibraryTerm">

        <id name="id" column="id">
            <generator class="native"/>
        </id>

        <property name="name">
            <column name="name" sql-type="varchar(45)" length="45"></column>
        </property>

        <property name="address">
            <column name="address" sql-type="varchar(45)" length="45"></column>
        </property>

        <property name="city">
            <column name="city" sql-type="varchar(45)" length="45"></column>
        </property>

        <property name="state">
            <column name="state" sql-type="varchar(45)" length="45"></column>
        </property>

        <property name="zip">
            <column name="zip" sql-type="varchar(45)" length="45"></column>
        </property>

        <set name="books" table="libitems" inverse="true" cascade="all" >
            <key column="libraryid" not-null="true"/>
            <one-to-many class="com.gc.libterm.dto.BookDto"/>
        </set>
    </class>
</hibernate-mapping>